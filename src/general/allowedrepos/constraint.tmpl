apiVersion: templates.gatekeeper.sh/v1
kind: ConstraintTemplate
metadata:
  name: k8sallowedrepos
  annotations:
    metadata.gatekeeper.sh/title: "Allowed Repositories"
    metadata.gatekeeper.sh/version: 2.0.0
    description: >-
      Requires container images to begin with a string from the specified list of repoisors/regestries or images name.
spec:
  crd:
    spec:
      names:
        kind: K8sAllowedRepos
      validation:
        # Schema for the `parameters` field
        openAPIV3Schema:
          type: object
          properties:
            repos:
              description: The allowed prefixes for repositories or registries of a container image.
              type: array
              items:
                type: string
            images:
              description: The allowed prefixes for the names of container images.
              type: array
              items:
                type: string
  targets:
    - target: admission.k8s.gatekeeper.sh
      rego: |
{{ file.Read "src/general/allowedrepos/src.rego" | strings.Indent 8 | strings.TrimSuffix "\n" }}
